FROM node:20-alpine AS build
WORKDIR /opt/app
ADD . .
RUN npm ci --legacy-peer-deps


FROM node:20-alpine
WORKDIR /opt/app
COPY --from=build /opt/app/dist ./dist

# Устанавливаем supervisor и другие зависимости
RUN apk add --no-cache \
    supervisor \
    curl \
    unzip \
    bash \
    && curl -L https://raw.githubusercontent.com/remnawave/scripts/main/scripts/install-latest-xray.sh -o install-xray.sh \
    && chmod +x install-xray.sh \
    && bash ./install-xray.sh \
    && rm install-xray.sh \
    && apk del bash

# Создаем директории для логов и конфигурации
RUN mkdir -p /var/log/supervisor /etc/xray \
    && echo '{}' > /etc/xray/config.json

# Копируем конфигурацию supervisord
COPY supervisord.conf /etc/supervisor/conf.d/supervisord.conf

# Копируем скрипт инициализации
COPY docker-entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/docker-entrypoint.sh

COPY package*.json ./
COPY ./libs ./libs
RUN npm ci --legacy-peer-deps \
    && npm cache clean --force

ENTRYPOINT ["docker-entrypoint.sh"]